        "import random\n",
        "\n",
        "def check_input (array):\n",
        "    if len (array) == 2 and (all([isinstance(item, int) for item in array])):\n",
        "        if array[0] < array[1]:\n",
        "            return True\n",
        "        else:\n",
        "            return False\n",
        "\n",
        "\n",
        "def get_ladder (valid_array):\n",
        "    N = random.randrange (valid_array[0], valid_array[1])\n",
        "    output_array = []\n",
        "    for i in range (valid_array[1], N - 1, -1):\n",
        "        output_array.append (i*'*')\n",
        "    for i in range (valid_array[0], N + 1):\n",
        "        output_array.append (i*'*')\n",
        "    return output_array\n",
        "\n",
        "\n",
        "def main (lists_list):\n",
        "    c = 0\n",
        "    for lst in lists_list:\n",
        "        if check_input (lst):\n",
        "            c += 1\n",
        "            out_array = get_ladder (lst)\n",
        "            break\n",
        "    if c != 0:\n",
        "        for output in out_array:\n",
        "            print (output)\n",
        "    else:\n",
        "        print ('No valid array was found!')"
      ]
    }
  ]
