        "import string as st\n",
        "\n",
        "def edit_file(filename):\n",
        "  with open (filename, 'r', encoding='utf8') as fn:\n",
        "    l1 = fn.readlines()\n",
        "    l1 = [l.strip() for l in l1]\n",
        "  l_punct = list (st.punctuation)\n",
        "  for i in range (len(l1)):\n",
        "    for j in l_punct:\n",
        "      l1[i] = l1[i].replace(j, '')\n",
        "  with open(filename.replace('.txt', '') + '_edited.txt', 'w', encoding='utf8') as f:\n",
        "    for l in range (len(l1)):\n",
        "      if l == len(l1)-1:\n",
        "        f.write(l1[l])\n",
        "      else:\n",
        "        f.write(l1[l]+'\\n')"
      ]
    }
  ]
}